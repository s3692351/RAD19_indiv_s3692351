                        <% end %>
                        -->
                        <%= fa_icon "thumbs-o-up" %> 4
                        
                        <%= fa_icon "thumbs-o-down" %> 0
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
</div>
