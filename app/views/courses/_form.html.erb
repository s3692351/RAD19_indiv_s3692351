<%= form_for (@course) do |f| %>
  <%= render 'shared/error_messages', obj:@course %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :prerequisite %>
    <%= f.text_field :prerequisite, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class=>"form-control" %>
  </div>
  <div class="checkbox" style="padding-left:0px;">
    <b>Category:</b><br>
    <%= hidden_field_tag "course[category_ids][]",'' %>
    <% Category.all.each do | category | %>
      <%= check_box_tag "course[category_ids][]",category.id,@course.categories.include?(category),{:style=>"width:5%;"}%>
      <%= f.label :category, "#{category.title}", :style=>"padding-left:2%;" %>
    <% end %>
      <br>
  </div>
  <div class="checkbox" style="padding-left:0px;">
    <b>Location:</b><br>
    <%= hidden_field_tag "course[location_ids][]",'' %>
    <% Location.all.each do | location | %>
      <%= check_box_tag "course[location_ids][]", location.id , @course.locations.include?(location),{:style=>"width:5%;"}%>
      <%= f.label :location, "#{location.name}", :style=>"padding-left:2%;" %>
      <br>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label "Course Image" %>
    <%= f.file_field :courseImage%>
  </div>


  <div class="actions">
    <%= f.submit "Create Course", class: "btn btn-primary" %>
  </div>
<% end %>
