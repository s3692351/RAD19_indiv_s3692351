          <% @categories.each do| category| %>
            <li><%= link_to category.title, category_path(category.id) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li><%= link_to 'New Category', new_category_path %></li>
          <% end %>
        </ul>
      </li>
      <li class="dropdown">
